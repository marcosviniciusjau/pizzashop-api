{
  "compilerOptions": {
    "types": ["bun-types"],
    "target": "ES2022",             // Versão JS de saída
    "module": "ESNext",             // Usa módulos ES (import/export)
    "moduleResolution": "node",     // Resolve módulos do node
    "jsx": "react-jsx", // support JSX
    "allowJs": true, // allow importing `.js` from `.ts`
    "outDir": "./dist",             // Pasta onde vai gerar a build
    "rootDir": "./src",             // Onde estão seus arquivos TS
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
